<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MMS.UI.Default">
    <ControlTemplate x:Key="TextBoxTemplate" TargetType="{x:Type local:TextBox}">
        <TextBox BorderThickness="1" x:Name="textBox" BorderBrush="#205f99" Width="225" Height="28" VerticalContentAlignment="Center" HorizontalAlignment="Left">

        </TextBox>
    </ControlTemplate>
    <Style x:Key="TextBoxStyle" TargetType="{x:Type local:TextBox}">
        <Setter Property="Template" Value="{StaticResource TextBoxTemplate}" />
    </Style>
</ResourceDictionary>