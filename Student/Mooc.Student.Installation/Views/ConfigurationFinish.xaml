<Page x:Class="StudentClient.Installation.Views.ConfigurationFinish"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentClient.Installation.Views"
      mc:Ignorable="d" 
      d:DesignHeight="269" d:DesignWidth="580"
      Title="ConfigurationFinish">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="安装完成" Foreground="#fff" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Button Grid.Row="1" Content="确定"  Foreground="#fff" Background="#0175c8" BorderThickness="0" FontSize="12" x:Name="finishBtn" Width="120" Height="30" Cursor="Hand" Click="finishBtn_Click"  VerticalAlignment="Center" />
    </Grid>
</Page>
